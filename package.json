{
  "name": "parsec-bridge-ui",
  "version": "1.0.0",
  "main": "index.js",
  "license": "GPLv3",
  "private": true,
  "scripts": {
    "start": "parcel src/index.html",
    "build": "rm -rf dist/ && parcel build src/index.html",
    "precommit": "lint-staged",
    "deploy:dev": "aws s3 sync ./dist s3://stake-dev.parseclabs.org/ --acl public-read",
    "deploy:testnet": "aws s3 sync ./dist s3://stake-testnet.parseclabs.org/ --acl public-read",
    "deploy:mainnet": "aws s3 sync ./dist s3://stake.parseclabs.org/ --acl public-read"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add",
      "eslint"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "husky": "^0.14.3",
    "jest": "^23.0.1",
    "lint-staged": "^7.0.5",
    "parcel-bundler": "^1.8.1",
    "prettier": "^1.12.1"
  },
  "dependencies": {
    "antd": "^3.6.2",
    "ethereumjs-util": "^5.2.0",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "web3": "0.18.4"
  }
}
